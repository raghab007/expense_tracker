@inherits LayoutComponentBase

<MudDrawer Clipped="true" Open="true" Elevation="1" Color="Color.Transparent" Style="height: 100vh; width: 250px; background-color: white;">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6" Color="Color.Primary" Align="Align.Center" Style="font-size: 24px; color: black;">Expense Tracker</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <!-- Dashboard -->
        <MudNavLink Href="/home" Icon="@Icons.Material.Filled.Dashboard" Color="Color.Inherit" Style="padding: 16px; font-size: 20px; color: white;" ActiveClass="active-link">
            Dashboard
        </MudNavLink>
        
        <!-- Add Expense -->
        <MudNavLink Href="/add-expense" Icon="@Icons.Material.Filled.AddCircleOutline" Color="Color.Inherit" Style="padding: 16px; font-size: 20px; color: white;" ActiveClass="active-link">
            Add Expense
        </MudNavLink>
        
        <!-- View Expenses -->
        <MudNavLink Href="/view-expenses" Icon="@Icons.Material.Filled.List" Color="Color.Inherit" Style="padding: 16px; font-size: 20px; color: white;" ActiveClass="active-link">
            View Expenses
        </MudNavLink>

        <!-- Debts -->
        <MudNavLink Href="/debts" Icon="@Icons.Material.Filled.List" Color="Color.Inherit" Style="padding: 16px; font-size: 20px; color: white;" ActiveClass="active-link">
            Debts 
        </MudNavLink>
        
    </MudNavMenu>
</MudDrawer>

<style>
    .active-link {
        background-color: #f0f0f0;
        color: white !important;
        border-radius: 5px;
    }


    .mud-nav-link {
        transition: background-color 0.3s ease-in-out, transform 0.2s;
        border-radius: 5px; 
    }

    .mud-nav-link:hover {
        background-color: #e0e0e0; 
        transform: scale(1.05); 
    }

  
    .mud-nav-link .mud-icon {
        font-size: 30px !important; 
    }

    .mud-nav-link {
        font-size: 20px !important;
        color: white;
    }

    
    .mud-nav-menu {
        background-color: white;
        color: white; 
        padding: 0;
    }

    .mud-nav-link {
        padding: 16px 24px; 
    }

   
    .mud-drawer-header {
        background-color: white; 
        color: white;
        padding: 16px;
        text-align: center;
    }
</style>
