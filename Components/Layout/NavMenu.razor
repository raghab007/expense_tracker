@inherits LayoutComponentBase

<MudDrawer Clipped="true" Open="true" Elevation="1" Color="Color.Primary" Style="height: 100vh; width: 250px;">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6" Color="Color.Inherit" Align="Align.Center" Style="font-size: 24px;">Expense Tracker</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <!-- Dashboard -->
        <MudNavLink Href="/home" Icon="@Icons.Material.Filled.Dashboard" Color="Color.Inherit" Style="padding: 16px; font-size: 20px; color: white;" ActiveClass="active-link">
            Dashboard
        </MudNavLink>
        
        <!-- Add Expense -->
        <MudNavLink Href="/add-expense" Icon="@Icons.Material.Filled.AddCircleOutline" Color="Color.Inherit" Style="padding: 16px; font-size: 20px; color: white;" ActiveClass="active-link">
            Add Expense
        </MudNavLink>
        
        <!-- View Expenses -->
        <MudNavLink Href="/view-expenses" Icon="@Icons.Material.Filled.List" Color="Color.Inherit" Style="padding: 16px; font-size: 20px; color: white;" ActiveClass="active-link">
            View Expenses
        </MudNavLink>

        <!-- Debts -->
        <MudNavLink Href="/debts" Icon="@Icons.Material.Filled.List" Color="Color.Inherit" Style="padding: 16px; font-size: 20px; color: white;" ActiveClass="active-link">
            Debts 
        </MudNavLink>
        
        <!-- Settings -->
        <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" Style="padding: 16px; font-size: 20px; color: white;" ActiveClass="active-link">
            Settings
        </MudNavLink>

       
    </MudNavMenu>
</MudDrawer>

<style>
    /* Active link color */
    .active-link {
        background-color: #3f51b5; /* Highlight color for active link */
        color: white !important; /* Ensure text remains white */
        border-radius: 5px; /* Rounded corners for active link */
    }

    /* Hover effect */
    .mud-nav-link {
        transition: background-color 0.3s ease-in-out, transform 0.2s;
        border-radius: 5px; /* Smooth border radius */
    }

    .mud-nav-link:hover {
        background-color: #303f9f; /* Hover effect */
        transform: scale(1.05); /* Slightly increase size on hover */
    }

    /* Bigger icons and text */
    .mud-nav-link .mud-icon {
        font-size: 30px !important; /* Increase icon size */
    }

    .mud-nav-link {
        font-size: 20px !important; /* Increase text size */
    }

    /* Overall styling for nav items */
    .mud-nav-menu {
        background-color: #2c3e50; /* Darker background for nav */
        color: white; /* White text */
        padding: 0;
    }

    .mud-nav-link {
        padding: 16px 24px; /* Increased padding for better spacing */
        transition: background-color 0.3s, transform 0.2s ease-in-out;
    }

    .mud-nav-link:hover {
        background-color: #34495e; /* Lighter hover color */
    }

    /* Styling for the drawer header */
    .mud-drawer-header {
        background-color: #2980b9; /* Blue header for the drawer */
        color: white;
        padding: 16px;
        text-align: center;
    }
</style>
