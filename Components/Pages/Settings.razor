@page "/settings"
@using MudBlazor

<MudLayout>
    <!-- Include the Navigation Menu (NavMenu) -->
    <NavMenu />

    <!-- Main Content -->
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 100vh; padding-top: 20px;">
            <MudPaper Elevation="4" Style="width: 100%; max-width: 500px; padding: 30px; border-radius: 12px;">
                <MudText Typo="Typo.h4" Align="Align.Center" Style="margin-bottom: 20px;">
                    Settings
                </MudText>

                <MudTextField Label="Name" @bind-Value="Name" Placeholder="Enter your name" FullWidth="true" />
                <MudTextField Label="Email" @bind-Value="Email" Placeholder="Enter your email" FullWidth="true" Margin="Margin.Normal" />
                <MudTextField Label="Password" @bind-Value="Password" Placeholder="Enter your password" FullWidth="true" Margin="Margin.Normal" InputType="InputType.Password" />

                <MudButton OnClick="SaveChanges" FullWidth="true" Variant="Variant.Filled" Color="Color.Primary" Style="margin-top: 20px;">
                    Save Changes
                </MudButton>

                <MudButton OnClick="NavigateToHome" FullWidth="true" Variant="Variant.Text" Color="Color.Secondary" Style="margin-top: 15px;">
                    Back to Home
                </MudButton>
            </MudPaper>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private string Name { get; set; }
    private string Email { get; set; }
    private string Password { get; set; }

    private void SaveChanges()
    {
        // Add logic here to update user details
        Console.WriteLine($"Name: {Name}, Email: {Email}, Password: {Password}");
        // Call a service or API to save the changes if needed
    }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/home");
    }
}
