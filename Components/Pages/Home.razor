@page "/home"
@using MudBlazor

<MudLayout>
    <!-- Include the Navigation Menu (NavMenu) -->
    <NavMenu />

    <!-- Main Content -->
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
            <MudPaper Elevation="3" Class="d-flex flex-column align-items-center" Style="padding: 40px; border-radius: 12px; background-color: #fff; width: 100%; max-width: 900px;">
                <MudText Typo="Typo.h4" Color="Color.Primary" Align="Align.Center" Style="margin-bottom: 20px;">
                    Welcome to Expense Tracker App
                </MudText>
                <MudText Typo="Typo.body1" Align="Align.Center" Style="color: #555; margin-bottom: 30px;">
                    Effortlessly track your expenses and manage your finances with ease!
                </MudText>

                <MudText Typo="Typo.body2" Align="Align.Center" Style="color: #777; margin-bottom: 30px;">
                    Use the navigation menu on the left to access different features of the app.
                </MudText>

                <h1>All Expenses</h1>
                <table style="width: 100%; border-collapse: collapse; margin-bottom: 30px;">
                    <thead>
                        <tr style="background-color: #f5f5f5; text-align: left; border-bottom: 1px solid #ddd;">
                            <th style="padding: 10px; border: 1px solid #ddd;">Category</th>
                            <th style="padding: 10px; border: 1px solid #ddd;">Date</th>
                            <th style="padding: 10px; border: 1px solid #ddd;">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="padding: 10px; border: 1px solid #ddd;">Food</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">2025-01-01</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">$40</td>
                        </tr>
                        <tr>
                            <td style="padding: 10px; border: 1px solid #ddd;">Transport</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">2025-01-02</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">$30</td>
                        </tr>
                        <tr>
                            <td style="padding: 10px; border: 1px solid #ddd;">Shopping</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">2025-01-03</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">$20</td>
                        </tr>
                        <tr>
                            <td style="padding: 10px; border: 1px solid #ddd;">Utilities</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">2025-01-04</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">$10</td>
                        </tr>
                    </tbody>
                </table>

                <!-- Static Line Chart -->
                <MudText Typo="Typo.h6" Align="Align.Center" Style="margin-bottom: 20px; color: #333;">
                    Monthly Expenses
                </MudText>
                <MudChart ChartType="ChartType.Line" Height="300px" Style="margin-bottom: 40px;">
                    <ChartData>
                        <ChartDataPoint X="January" Y="500" />
                        <ChartDataPoint X="February" Y="600" />
                        <ChartDataPoint X="March" Y="700" />
                        <ChartDataPoint X="April" Y="800" />
                        <ChartDataPoint X="May" Y="750" />
                        <ChartDataPoint X="June" Y="650" />
                    </ChartData>
                    <ChartOptions>
                        <ChartOption Name="scales" Type="scale" Value="{
                            'x': {'title': {'display': true, 'text': 'Months'}},
                            'y': {'title': {'display': true, 'text': 'Amount (in $)'}}
                        }" />
                    </ChartOptions>
                </MudChart>

                <!-- Static Pie Chart -->
                <MudText Typo="Typo.h6" Align="Align.Center" Style="margin-bottom: 20px; color: #333;">
                    Expense Categories
                </MudText>
                <MudChart ChartType="ChartType.Pie" Height="300px" Style="margin-bottom: 40px;">
                    <ChartData>
                        <ChartDataPoint Label="Food" Value="40" />
                        <ChartDataPoint Label="Transport" Value="30" />
                        <ChartDataPoint Label="Shopping" Value="20" />
                        <ChartDataPoint Label="Utilities" Value="10" />
                    </ChartData>
                    <ChartOptions>
                        <ChartOption Name="plugins.legend.position" Value="'top'" />
                    </ChartOptions>
                </MudChart>

                <!-- Static Expense Table -->
                <MudText Typo="Typo.h6" Align="Align.Center" Style="margin-bottom: 20px; color: #333;">
                    Expense Details
                </MudText>
            </MudPaper>
        </MudContainer>
    </MudMainContent>
</MudLayout>
