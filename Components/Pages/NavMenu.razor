@inherits LayoutComponentBase

<MudDrawer Clipped="true" Open="true" Elevation="1" Color="Color.Primary" Style="height: 100vh;">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6" Color="Color.Inherit" Align="Align.Center">Expense Tracker</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <!-- Dashboard -->
        <MudNavLink Href="/home" Icon="@Icons.Material.Filled.Dashboard" Color="Color.Inherit" Style="padding: 12px; font-size: 16px; color: white;" ActiveClass="active-link">
            Dashboard
        </MudNavLink>
        
        <!-- Add Expense -->
        <MudNavLink Href="/add-expense" Icon="@Icons.Material.Filled.AddCircleOutline" Color="Color.Inherit" Style="padding: 12px; font-size: 16px; color: white;" ActiveClass="active-link">
            Add Expense
        </MudNavLink>
        
        <!-- View Expenses -->
        <MudNavLink Href="/view-expenses" Icon="@Icons.Material.Filled.List" Color="Color.Inherit" Style="padding: 12px; font-size: 16px; color: white;" ActiveClass="active-link">
            View Expenses
        </MudNavLink>
        
        <!-- Settings -->
        <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" Style="padding: 12px; font-size: 16px; color: white;" ActiveClass="active-link">
            Settings
        </MudNavLink>

        <!-- Logout with custom color -->
        <MudNavLink Href="/" Icon="@Icons.Material.Filled.ExitToApp" Color="Color.Error" Style="padding: 12px; font-size: 16px; color: white;" ActiveClass="active-link">
            Logout
        </MudNavLink>
    </MudNavMenu>
</MudDrawer>

<style>
    .active-link {
        background-color: #3f51b5; /* Highlight color for active link */
        color: white !important; /* Ensure text remains white */
    }

    .mud-nav-link {
        transition: background-color 0.3s ease-in-out;
    }

    .mud-nav-link:hover {
        background-color: #303f9f; /* Hover effect */
    }
</style>