@page "/signup"
<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f1f1f1; margin: 0;">
    <div style="background-color: #fff; padding: 40px; border-radius: 8px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); width: 100%; max-width: 400px; text-align: center;">
        <h1 style="color: #333; margin-bottom: 20px; font-size: 28px;">Signup</h1>
        <p style="color: #555; margin-bottom: 15px;">Enter your details</p>

        <form action="/" method="post" style="margin-bottom: 20px;">
            <input type="text" placeholder="Username" style="width: 100%; padding: 12px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;" required />
            <br />
            <input type="text" name="name" placeholder="FirstName" style="width: 100%; padding: 12px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;" required />
            <br />
            <input type="text" name="name" placeholder="LastName" style="width: 100%; padding: 12px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;" required />
            <br />
            <input type="email" name="name" placeholder="Email" style="width: 100%; padding: 12px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;" required />
            <br />
            <input type="password" name="name" placeholder="Password" style="width: 100%; padding: 12px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;" required />
            <br />
            <button type="submit" style="width: 100%; padding: 12px; background-color: #007bff; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer; transition: background-color 0.3s ease;">Register</button>
        </form>

        <p style="color: #555; font-size: 14px;">Already have an account? <a href="" style="color: #007bff; text-decoration: none; font-weight: bold;">Login</a></p>
    </div>
</div>
